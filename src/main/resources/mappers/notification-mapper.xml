<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC " -//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="norification">

	<update id="updateNotiYN" parameterType="_int"> <!-- 알림 클릭시 알림 읽음상태로 전환 -->
		update notification set read_yn='Y' where noti_id=#{notiId}
	</update>
	
	<select id="countNotification" parameterType="string" resultType="_int">>	<!-- 2P 알림갯수 -->
		select count(*) from notification where user_id=#{userId} and read_yn='N'
	</select>
	 
	<insert id="insertNoti" parameterType="NotificationDto">	<!-- 알림생성 -->
		insert into notification values(noti_id_sequence.nextval, #{userId}, #{message}, #{readYN},#{type}, #{referenceId}, "")
	</insert>
	
	<select id="getTradeNotice" resultType="NotificationDto" > <!-- 18P해당계정의 거래알림 -->
		select noti_id,message,read_yn,type,reference_id,created_at from notification where type=3 and user_id=#{userId}
	</select>
</mapper>


